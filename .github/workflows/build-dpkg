#!/usr/bin/env bash

apt-get update
apt-get -y install build-essential debhelper devscripts \
  checkpolicy gawk policycoreutils policycoreutils-python-utils

dch -U --noquery -v "2:${VERSION_TAG}" "automatic build"
debuild -b -uc -us
mkdir /output
mv ../*.deb /output
cd /output && zip packages.zip *.deb
